<!-- if I have logged in then only I can view the users and friends and the other features -->
<% if(locals.user) { %>
<div id="home-container">
    <section id="user-nav">
        <h2>User</h2>
        <% if(locals.user) { %>
            <% if(user.avatar) { %>
                <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">
            <% } %>
            <p>
                <a href="/users/profile/<%= user.id %>"><%= user.name %></a>
            </p>
        <% } %>
    </section>
    <section id="feed-posts">
        <h2>Posts</h2>
        <div class="container mt-3">
            <div class="d-flex justify-content-cernter row">
                <div class="col-md-10">
                    <div class="d-flex flex-column comment-section">
                        <div class="bg-info p-5">
                            
                            <% if(locals.user){ %>
                            <form action="/posts/create" id="new-post-form" method="POST">
                                <textarea name="content" cols="30" rows="3" class="form-control" placeholder="Post Here..." required></textarea><br>
                                <div class="mar-top clearfix">
                                <button class="btn btn-sm btn-primary pull-right" type="submit"><i class="fa fa-pencil fa-fw"></i> Post</button>
                                </div>
                                </form>
                            <% } %>
        
                            <!-- <div id="posts-list-container"> -->
                                <ul>
                                    <% for(post of posts){ %>

                                        <%- include('_post') -%>
                                    <%} %>
                                </ul>
                        </div>
                    </div>
                </div>   
               </div>
               </div>      
    </section>
    <section id="user-friends">
        <h2> Friends </h2>
        <% for(u of all_users) {%>
            <p>
                <a href="/users/profile/<%= u.id %>"> 
                <img src="<%= u.avatar %>" alt="<%= u.name %>" width="30" height="30">
                <strong><%= u.name %></strong></a>
            </p>
        <%}%>
    </section>

</div>

